<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_hud_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp"
    tools:context="com.example.virosample.ProductSelectionActivity">

    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/ar_back_button"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_close"
        android:scaleType="fitCenter"/>


    <ImageView
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/ar_details_page"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_more"
        android:scaleType="fitCenter"/>


    <LinearLayout
        android:id="@+id/bottom_frame_controls"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="bottom|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ar_photo_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_camera"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
